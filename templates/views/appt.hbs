<html>
	<head>
		<title>{{pageTitle}}</title>
		<link
			rel='stylesheet'
			href='https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css'
			integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T'
			crossorigin='anonymous'
		/>
		<link rel='stylesheet' type='text/css' href='/css/styles.css' />
	</head>
	<body>
		<div class='container'>
			<h1>{{pageTitle}}</h1>
			<br />
			<table id='t1' class='table'>
				<thead>
					<tr>
						<th>User</th>
						<th>Name</th>
						<th>Type</th>
						<th>Description</th>
						<th>Start Time</th>
						<th>End Time</th>
						<th>Metadata</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><a href='/users/{{appt.userId}}'>User</a></td>
						<td>{{appt.name}}</td>
						<td>{{appt.type}}</td>
						<td>{{appt.description}}</td>
						<td>{{dateFormat
								appt.startTime
								'MM/DD/yyyy hh:mm a'
							}}</td>
						<td>{{dateFormat
								appt.endTime
								'MM/DD/yyyy hh:mm a'
							}}</td>
						<td>{{appt.metaData}}</td>
						<td>
							<div class='btn-group'>
								<form
									action='/appointments/{{appt._id}}/delete'
									method='POST'
									onsubmit='setTimeout(function(){window.location.reload();},800);'
								>
									<button
										type='submit'
										onclick="return confirm('Are you sure you want to delete this appointment?')"
										class='btn btn-danger action-buttons'
									>
										Delete</button>
								</form>
								<form action='/appointments/{{appt._id}}/edit'>
									<button
										type='submit'
										class='btn btn-primary action-buttons'
									>Edit</button>
								</form>
							</div>
						</td>
					</tr>
				</tbody>
			</table>
			<a href='javascript:history.back()'>Go Back</a>
		</div>
	</body>
</html>